{
  "tests": [
    {
      "name": "Setup: User",
      "setup": "macro_auth_user",
      "username": "auth_test_user",
      "password": "password"
    },
    {
      "name": "Register Duplicate User (Fail)",
      "command": "auth.register",
      "data": { "username": "auth_test_user", "passwd": "password" },
      "expect": { "status": "error", "error_code": 1105 }
    },
    {
      "name": "MFA Verify (Refusal - No MFA Setup)",
      "command": "auth.mfa.verify",
      "data": { "token": "123456" },
      "user": "auth_test_user",
      "expect": { "status": "refused", "error_code": 2100 }
    },
    {
      "name": "Set Player Preferences",
      "command": "player.set_prefs",
      "data": { "theme": "dark" },
      "user": "auth_test_user",
      "expect": { "status": "ok" }
    },
    {
      "name": "Get Player Settings",
      "command": "player.get_prefs",
      "user": "auth_test_user",
      "expect": { "status": "ok" },
      "asserts": [
        { "path": "data.prefs.theme", "op": "==", "value": "dark" }
      ]
    }
  ]
}
