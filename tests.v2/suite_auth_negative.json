{
  "name": "Bucket 2 Negative Auth Suite",
  "tests": [
    {
      "name": "auth.login - Invalid Credentials",
      "command": "auth.login",
      "data": { "username": "nonexistent", "passwd": "wrong" },
      "expect": { "status": "error", "error_code": 1101 }
    },
    {
      "name": "auth.logout - Omit Auth (Observed: 401)",
      "command": "auth.logout",
      "expect": { "status": "error", "error_code": 401 }
    },
    {
      "name": "auth.refresh - Missing Auth (Observed: 401)",
      "command": "auth.refresh",
      "expect": {  "status": "error", "error_code": 401  }
    },
    {
      "name": "system.hello - Invalid Payload (Observed: ok)",
      "command": "system.hello",
      "data": { "invalid": "payload", "client_version": "0.0.0" },
      "expect": { "status": "ok" }
    },
    {
      "name": "session.ping - Missing Auth (Observed: ok)",
      "command": "session.ping",
      "expect": {  "status": "error", "error_code": 401  }
    },
    {
      "name": "system.capabilities - Missing Auth (Observed: ok)",
      "command": "system.capabilities",
      "expect": {  "status": "error", "error_code": 401  }
    },
    {
      "name": "system.cmd_list - Missing Auth (Observed: ok)",
      "command": "system.cmd_list",
      "expect": {  "status": "error", "error_code": 401  }
    },
    {
      "name": "system.hello - Invalid Payload (Observed: ok)",
      "command": "system.hello",
      "data": 123,
      "expect": { "status": "error", "error_code": 1300 }
    }
  ]
}
