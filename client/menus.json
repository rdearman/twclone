          "key": "g",
          "label": "(G) Get Quote",
          "action": {
            "rpc": {
              "command": "trade.quote",
              "data": {
                "port_id": "<ctx:last_sector_desc.port.id>",
                "commodity": "<prompt:str:Commodity (ore, organics, equipment)>",
                "quantity": "<prompt:int:Quantity>"
              }
            },
            "post": "pretty_print_trade_quote"
          }
        },
        {
          "key": "k",
          "label": "(K) Bank",
          "action": {
