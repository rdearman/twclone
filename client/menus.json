    "DOCK": {
      "title": "--- Dock Menu ({{port_name}}) ---",
      "options": [
        {
          "key": "t",
          "label": "(T) Trade",
          "action": {
            "pycall": "raw_json_handler"
          }
        },
        {
          "key": "b",
          "label": "(B) Buy (buy)",
          "action": {
            "pycall": "simple_buy_handler",
