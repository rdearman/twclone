{
  "tests": [
    {
      "name": "login",
      "command": { "command": "auth.login", "data": { "user_name": "newguy", "password": "pass123" } },
      "expect": { "status": "ok" }
    },
    {
      "name": "force move to 22",
      "command": { "command": "move.force_move", "data": { "player_id": 3, "sector_id": 22, "idempotency_key": "00000000-0000-0000-0000-00000022A001" } },
      "expect": { "status": "*" }
    },
    {
      "name": "sector.info shows fighters & mines at 22",
      "command": { "command": "sector.info" },
      "expect": { "status": "ok", "type": "*" },
      "asserts": [
        { "path": "data.sector_id", "op": "==", "value": 22 },
        { "path": "data.entities.fighters", "op": ">=", "value": 0 },
        { "path": "data.entities.mines.armid", "op": ">=", "value": 0 },
        { "path": "data.entities.mines.limpet", "op": ">=", "value": 0 }
      ]
    }
  ]
}
